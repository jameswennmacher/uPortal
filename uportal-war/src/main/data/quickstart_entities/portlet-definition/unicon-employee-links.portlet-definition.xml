<portlet-definition
    xmlns="https://source.jasig.org/schemas/uportal/io/portlet-definition" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://source.jasig.org/schemas/uportal/io/portlet-definition ../../../resources/xsd/io/portlet-definition/portlet-definition-4.0.xsd"
   
    version="4.0"
>

  <title>Unicon Links</title>
  <name>Unicon Links</name>
  <fname>unicon-employee-links</fname>
  <desc>Useful Unicon employee links.</desc>
  <type>CMS</type>
  <timeout>10000</timeout>
  <portlet-descriptor xmlns:up="https://source.jasig.org/schemas/uportal">
    <up:webAppName>/SimpleContentPortlet</up:webAppName>
    <up:portletName>cms</up:portletName>
  </portlet-descriptor>
  
  
  
  
    <category>Information</category>
  
  
    <group>Employees</group>
  
  
    <parameter>
      <name>disableDynamicTitle</name>
      <value>true</value> 
    </parameter>
	<parameter>
      <name>iconUrl</name>
      <value>/ResourceServingWebapp/rs/tango/0.8.90/32x32/mimetypes/text-html.png</value>
    </parameter>
  
  
    <portlet-preference>
        <name>content</name>
        <value>
            <![CDATA[
			<div class="fl-widget portlet portlet-content" role="section" data-role="content">

			  <!-- Portlet Body -->
			  <div class="fl-widget-content portlet-body" role="main">
  
			    <!-- Portlet Section -->
			    <div id="${n}search" class="portlet-section" role="region">

			      <div class="portlet-section-body">
		              <div class="content">
		                <ul data-role="listview">
		                    <li><a target="_blank" href="https://zimbra.unicon.net/">Zimbra</a></li>
		                    <li><a target="_blank" href="https://hr.unicon.net/">Timesheet</a></li>
		                    <li><a target="_blank" href="https://confluence.unicon.net/confluence">Confluence</a></li>
		                    <li><a target="_blank" href="https://jira.unicon.net/jira">JIRA</a></li>
		                    <li><a target="_blank" href="http://www.unicon.net/">Unicon Home Site</a></li>
		                </ul>
		              </div>
			      </div>
			    </div>
			</div>
            ]]>
        </value>
    </portlet-preference>
  
</portlet-definition>
