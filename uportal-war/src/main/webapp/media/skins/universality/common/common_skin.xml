<resources xmlns="http://www.jasig.org/uportal/web/skin"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.jasig.org/uportal/web/skin https://source.jasig.org/schemas/resource-server/skin-configuration/skin-configuration-v1.2.xsd">

    <!-- For printing of portal pages. Common to all skins using the universality theme -->
    <css>css/print.css</css>

    <!-- For layout of portal pages. Common to all skins using the universality theme. -->
    <css>css/layout-portal.css</css>

    <!-- Support for the JSR-168 portlet specification. Common to all skins using the universality theme. -->
    <css>css/jsr168.css</css>

    <!-- uPortal portlet CSS contributed to the Fluid Project. Now importing from Fluid Infusion. Local overrides can be made in portlet.css.
    <css resource="true">/rs/fluid/1.4-bea0041/fss/css/fss-layout-portlet.css</css>
    <css resource="true">/rs/fluid/1.4-bea0041/fss/css/fss-theme-portlet.css</css> -->

    <!-- For layout of portlet content. Common to all skins using the universality theme. -->
    <css>css/layout-portlet.css</css>

    <!-- Default visual style for portlet content. -->
    <css>css/portlet.css</css>

    <!-- Styles for the tokeninput jQuery plugin. -->
    <css>css/token-input.css</css>

    <!-- Default visual style for sidebar content with show/how feature. -->
    <css>css/sidebar.css</css>

    <!--
    | NOTE:  The following order is important!
    +-->
    <js included="plain">/ResourceServingWebapp/rs/jquery/1.10.2/jquery-1.10.2.js</js>
    <js included="aggregated">/ResourceServingWebapp/rs/jquery/1.10.2/jquery-1.10.2.min.js</js>

    <!-- Must follow loading of jQuery -->
    <js included="plain">/ResourceServingWebapp/rs/jquery-migrate/jquery-migrate-1.2.1.js</js>
    <js included="aggregated">/ResourceServingWebapp/rs/jquery-migrate/jquery-migrate-1.2.1.min.js</js>

    <js included="plain" resource="true">/rs/jquery-plugins/form/3.25.0-2013.01.18/jquery.form-3.25.0-2013.01.18.js</js>
    <js included="aggregated" resource="true">/rs/jquery-plugins/form/3.25.0-2013.01.18/jquery.form-3.25.0-2013.01.18.js</js>

    <js included="plain" resource="true">/rs/jquery-plugins/validation/1.11.1/jquery.validate-1.11.1.js</js>
    <js included="plain" resource="true">/rs/jquery-plugins/validation/1.11.1/additional-methods-1.11.1.js</js>
    <js included="aggregated" resource="true">/rs/jquery-plugins/validation/1.11.1/jquery.validate-1.11.1.min.js</js>
    <js included="aggregated" resource="true">/rs/jquery-plugins/validation/1.11.1/additional-methods-1.11.1.min.js</js>

    <js included="plain" resource="true">/rs/jquery-plugins/cookie/1.0/jquery.cookie-1.0.js</js>
    <js included="aggregated" resource="true">/rs/jquery-plugins/cookie/1.0/jquery.cookie-1.0.min.js</js>

    <js included="plain" resource="true">/rs/jqueryui/1.10.3/jquery-ui-1.10.3.js</js>
    <js included="aggregated" resource="true">/rs/jqueryui/1.10.3/jquery-ui-1.10.3.min.js</js>

    <!-- Uncomment for internationalization.  Removed for minor efficiency especially for mobile networks. -->
    <!--
    <js included="plain" resource="true">/rs/jqueryui/1.10.3/i18n/jquery-ui-i18n.js</js>
    <js included="aggregated" resource="true">/rs/jqueryui/1.10.3/i18n/jquery-ui-i18n.min.js</js>
    -->

    <js included="plain" resource="true">/rs/underscore/1.5.2/underscore-1.5.2.js</js>
    <js included="aggregated" resource="true">/rs/underscore/1.5.2/underscore-1.5.2.min.js</js>

    <js included="plain" resource="true">/rs/backbone/1.0.0/backbone-1.0.0.js</js>
    <js included="aggregated" resource="true">/rs/backbone/1.0.0/backbone-1.0.0.min.js</js>

    <js included="plain" resource="true">/rs/fluid/1.4.0-upmc/js/fluid-all-1.4.0.js</js>
    <js included="aggregated" resource="true">/rs/fluid/1.4.0-upmc/js/fluid-all-1.4.0.min.js</js>

    <js import="true">../../common/common_skin.xml</js>

</resources>
